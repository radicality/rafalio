name:                rafalio
version:             0.1.0.0
synopsis:            My homepage
-- description:         
homepage:            http://rafal.io
-- license:             
license-file:        LICENSE
author:              Rafal Szymanski
maintainer:          me@rafal.io
-- copyright:           
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable rafalio
  main-is:             Main.hs
