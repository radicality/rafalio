  -- other-extensions:    
  build-depends:       base >= 4.6,
                       hakyll >= 4.7,
                       filepath >= 1.4,
                       time >= 1.5,
                       highlighting-kate >= 0.6,
                       blaze-html >= 0.8,
                       pandoc >= 1.15,
                       pandoc-types >= 1.12,
                       containers >= 0.5,
                       bytestring >= 0.1,
                       SHA >= 1.6,
                       old-locale >= 1.0,
                       split >= 0.2

  hs-source-dirs:      src
  default-language:    Haskell2010
